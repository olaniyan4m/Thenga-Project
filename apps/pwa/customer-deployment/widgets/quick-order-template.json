{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "text": "Thenga Customer",
      "horizontalAlignment": "Center",
      "weight": "Bolder"
    },
    {
      "type": "TextBlock",
      "spacing": "Large",
      "weight": "Bolder",
