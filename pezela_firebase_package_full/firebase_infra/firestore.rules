rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Merchants collection: only authenticated merchant user can write their doc
    match /merchants/{merchantId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == merchantId;
      // products subcollection
      match /products/{productId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == merchantId;
      }
      match /orders/{orderId} {
        allow read: if request.auth != null && (request.auth.uid == merchantId || request.auth.token.admin == true);
        allow write: if true; // orders can be created by unauthenticated customers via backend API
      }
    }
  }
}
